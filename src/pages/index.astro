---
import Layout from '../components/Layout.astro';
import { Plus, Globe, Users } from 'lucide-react';
import { getThreads } from '../utils/storage';
import { forumSections } from '../data/mockData';

const threads = getThreads();
---

<Layout title="ADHD Forum - Home">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="flex gap-8">
      <!-- Main Content -->
      <main class="flex-1 min-w-0">
        <!-- Welcome Section -->
        <div class="bg-gradient-to-r from-primary-500 to-secondary-500 rounded-2xl text-white p-8 mb-8">
          <h1 class="text-3xl font-display font-bold mb-4">
            Welcome to your ADHD community üíô
          </h1>
          <p class="text-primary-100 text-lg leading-relaxed mb-6">
            A safe, supportive space where you can share experiences, find resources, 
            and connect with others who understand your journey. Join our public discussions 
            or become a member for deeper community support.
          </p>
          <div class="flex flex-col sm:flex-row gap-4">
            <a
              href="/new-thread"
              class="bg-white text-primary-600 px-6 py-3 rounded-xl font-semibold hover:bg-gray-50 transition-colors inline-flex items-center justify-center"
            >
              ‚ûï Share Your Story
            </a>
            <a
              href="/signup"
              class="bg-secondary-600 bg-opacity-20 text-white px-6 py-3 rounded-xl font-semibold hover:bg-opacity-30 transition-colors inline-flex items-center justify-center border border-secondary-300"
            >
              Join Our Community
            </a>
          </div>
        </div>

        <!-- Forum Sections -->
        <div class="mb-8">
          <h2 class="text-2xl font-bold text-gray-900 mb-6">Forum Sections</h2>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            {forumSections.map((section) => (
              <div class="bg-white rounded-2xl border border-gray-100 p-6 hover:border-primary-200 transition-colors">
                <div class="flex items-center space-x-3 mb-3">
                  <div class={`w-3 h-3 rounded-full bg-${section.color}-500`}></div>
                  <h3 class="font-semibold text-gray-900">{section.name}</h3>
                </div>
                <p class="text-gray-600 text-sm mb-4">{section.description}</p>
                <div class="flex items-center justify-between text-sm text-gray-500">
                  <span>{section.threadCount} threads</span>
                  <span>{section.isPublic ? 'Public' : 'Members Only'}</span>
                </div>
              </div>
            ))}
          </div>
        </div>

        <!-- Recent Discussions -->
        <div class="mb-6">
          <div class="flex items-center justify-between mb-6">
            <h2 class="text-2xl font-bold text-gray-900">Recent Discussions</h2>
            
            <!-- Filter Tabs -->
            <div class="flex space-x-1 bg-gray-100 rounded-xl p-1">
              <button class="flex items-center space-x-1 px-4 py-2 rounded-lg font-medium transition-colors bg-white text-primary-600 shadow-sm">
                <span>All</span>
              </button>
              <button class="flex items-center space-x-1 px-4 py-2 rounded-lg font-medium transition-colors text-gray-600 hover:text-gray-900">
                <span>üåç Public</span>
              </button>
            </div>
          </div>
        </div>

        <!-- Thread Feed -->
        <div class="space-y-6" id="thread-feed">
          {threads.filter(thread => thread.isPublic).map((thread) => (
            <div class="bg-white rounded-2xl border border-gray-100 p-6">
              <div class="flex items-start justify-between mb-4">
                <div class="flex items-center space-x-3">
                  <img
                    src={thread.author.avatar}
                    alt={thread.author.username}
                    class="w-10 h-10 rounded-full"
                  />
                  <div>
                    <h3 class="font-medium text-gray-900">{thread.author.username}</h3>
                    <p class="text-sm text-gray-500">{thread.createdAt.toLocaleDateString()}</p>
                  </div>
                </div>
                <div class="flex items-center space-x-2">
                  {thread.isPublic ? 
                    <span class="text-sm text-green-600">üåç Public</span> : 
                    <span class="text-sm text-orange-600">üîí Members</span>
                  }
                </div>
              </div>
              
              <h2 class="text-xl font-semibold text-gray-900 mb-3">{thread.title}</h2>
              <p class="text-gray-700 mb-4">{thread.content.substring(0, 200)}...</p>
              
              <div class="flex items-center justify-between">
                <div class="flex items-center space-x-4 text-gray-500">
                  <div class="flex items-center space-x-1">
                    <span class="text-sm">‚ù§Ô∏è {thread.likes}</span>
                  </div>
                  <div class="flex items-center space-x-1">
                    <span class="text-sm">üí¨ {thread.commentCount}</span>
                  </div>
                </div>
                <div class="flex flex-wrap gap-2">
                  {thread.tags.slice(0, 3).map((tag) => (
                    <span class="bg-gray-100 text-gray-600 px-2 py-1 rounded-lg text-xs">{tag}</span>
                  ))}
                </div>
              </div>
            </div>
          ))}
        </div>

        <!-- Load More -->
        <div class="mt-8 text-center">
          <button class="bg-gray-100 text-gray-700 px-6 py-3 rounded-xl hover:bg-gray-200 transition-colors font-medium">
            Load More Threads
          </button>
        </div>
      </main>

      <!-- Sidebar -->
      <aside class="w-80 hidden lg:block">
        <div class="bg-white rounded-2xl border border-gray-100 p-6">
          <h3 class="font-semibold text-gray-900 mb-4">Popular Topics</h3>
          <div class="space-y-3">
            <div class="flex items-center justify-between">
              <span class="text-gray-700">#Medication</span>
              <span class="text-sm text-gray-500">124 posts</span>
            </div>
            <div class="flex items-center justify-between">
              <span class="text-gray-700">#Productivity</span>
              <span class="text-sm text-gray-500">89 posts</span>
            </div>
            <div class="flex items-center justify-between">
              <span class="text-gray-700">#RSD</span>
              <span class="text-sm text-gray-500">76 posts</span>
            </div>
          </div>
        </div>
      </aside>
    </div>
  </div>

</Layout>