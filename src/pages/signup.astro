---
import Layout from '../components/Layout.astro';
import { Brain, Check } from 'lucide-react';
import SignupForm from '../components/Auth/SignupForm';
---

<Layout title="Sign Up - ADHD Forum">
  <div class="min-h-screen bg-gradient-to-br from-secondary-50 via-background to-accent-50 flex items-center justify-center px-4 sm:px-6 lg:px-8 py-8">
    <div class="max-w-md w-full">
      <!-- Header -->
      <div class="text-center mb-8">
        <div class="inline-flex items-center justify-center w-16 h-16 bg-secondary-100 rounded-2xl mb-4">
          <Brain className="w-8 h-8 text-secondary-600" />
        </div>
        <h1 class="text-3xl font-display font-bold text-gray-900 mb-2">
          Join Our Community
        </h1>
        <p class="text-gray-600">
          Create your account and find your support network
        </p>
      </div>

      <!-- Form -->
      <SignupForm client:load />

      <!-- Community Benefits -->
      <div class="mt-6 bg-white/50 rounded-2xl p-6">
        <h3 class="font-semibold text-gray-900 mb-3">What you'll get:</h3>
        <div class="space-y-2">
          <div class="flex items-center space-x-2">
            <Check className="w-4 h-4 text-accent-600" />
            <span class="text-sm text-gray-600">Connect with understanding community members</span>
          </div>
          <div class="flex items-center space-x-2">
            <Check className="w-4 h-4 text-accent-600" />
            <span class="text-sm text-gray-600">Share experiences in a judgment-free space</span>
          </div>
          <div class="flex items-center space-x-2">
            <Check className="w-4 h-4 text-accent-600" />
            <span class="text-sm text-gray-600">Access ADHD-friendly resources and tips</span>
          </div>
          <div class="flex items-center space-x-2">
            <Check className="w-4 h-4 text-accent-600" />
            <span class="text-sm text-gray-600">Participate in supportive discussions</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>