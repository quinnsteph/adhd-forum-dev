---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="ADHD Forum - A supportive community for ADHD discussions" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/vite.svg" />
    <title>{title}</title>
  </head>
  <body class="min-h-screen bg-background">
    <div id="app">
      <slot />
    </div>
  </body>
</html>

<style is:global>
  @import "../index.css";
</style>